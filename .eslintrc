{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    // truffle test framework provided:
    "web3": true,
    "contract": true,
    "artifacts": true,
    "assert": true
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": [
      "warn"
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ]
  }
}